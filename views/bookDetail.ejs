<%- include("header.ejs") %>
    <div class="container">
        <h2 class="title-h2 text-center mt-20">Book</h2>
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputTitle">Tiêu đề</label>
                <input type="text" name="title" value="<%- book[0].title %>" class="form-control" id="exampleInputTitle"
                    placeholder="Tiêu đề" disabled>
            </div>

            <div class="form-group">
                <label for="exampleInputAuthor">Tác giả</label>
                <input type="text" name="author" value="<%- book[0].author %>" class="form-control"
                    id="exampleInputAuthor" placeholder="Tác giả" disabled>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Mô tả</label>
                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"
                    disabled> <%- book[0].description %> </textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputDate">Ngày phát hành</label>
                <input type="date" name="created_at" class="form-control" value="<%- book[0].publishDate %>"
                    id="exampleInputDate" placeholder="Ngày phát hành" disabled>
            </div>
            <div class="form-group">
                <label for="exampleInputPage">Số trang</label>
                <input type="number" name="page_count" class="form-control" value="<%- book[0].pageCount %>"
                    id="exampleInputPage" placeholder="Số trang" disabled>
            </div>
            <div class="form-group">
                <label for="exampleInputImage">Image</label>
                <img src="upload/<%- book[0].ImageUrl %>" width="200px">
                <input type="file" name="image" class="form-control" id="exampleInputImage" placeholder="Thể loại"
                    disabled>
            </div>
        </form>

        <div class="text-right" style="margin-bottom: 50px;">
            <a href="http://localhost:3000/book/edit/<%- book[0]._id %>" class="btn btn-success">edit</a>
            <a onclick="deleteBook('<%- book[0]._id %>')" class="btn btn-danger">delete</a>
        </div>

    </div>
    <script>
        function deleteBook(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `http://localhost:3000/book/delete/${id}`;
                }
            })
        }
    </script>

    <%- include("footer.ejs") %>