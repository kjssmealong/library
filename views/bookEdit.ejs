<%- include("header.ejs") %>
    <div class="container">
        <h2 class="title-h2 text-center mt-20">Book</h2>
        <form action="" method="post" enctype="multipart/form-data" style="margin-bottom: 50px;">
            <div class="form-group">
                <label for="exampleInputTitle">Tiêu đề</label>
                <input type="text" name="title" value="<%- book[0].title %>" class="form-control" id="exampleInputTitle"
                    placeholder="Tiêu đề" >
            </div>

            <div class="form-group">
                <label for="exampleInputAuthor">Tác giả</label>
                <input type="text" name="author" value="<%- book[0].author %>" class="form-control"
                    id="exampleInputAuthor" placeholder="Tác giả" >
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Mô tả</label>
                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"> <%- book[0].description %> </textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputDate">Ngày phát hành</label>
                <input type="date" name="created_at" class="form-control" value="<%- book[0].publishDate %>"
                    id="exampleInputDate" placeholder="Ngày phát hành">
            </div>
            <div class="form-group">
                <label for="exampleInputPage">Số trang</label>
                <input type="number" name="page_count" class="form-control" value="<%- book[0].pageCount %>"
                    id="exampleInputPage" placeholder="Số trang">
            </div>

            <div class="form-group">
                <label for="exampleInputCat">Thể loại</label>
                <select name="category" class="form-control" id="exampleInputCat" >
                    <% cats.forEach( (cat) => {%>
                        <option value="<%- cat._id %>"><%- cat.title %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="exampleInputImage">Image</label>
                <img src="upload/<%- book[0].ImageUrl %>" width="200px">
                <input type="file" name="image" class="form-control" id="exampleInputImage" placeholder="Thể loại">
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
        </form>
    </div>
<%- include("footer.ejs") %>